# ==================== SERVER CONFIGURATION ====================

# Node environment (development, production, test)
NODE_ENV=production

# Server port
PORT=8080

# ==================== SECURITY CONFIGURATION ====================

# Allowed origins for CORS (comma-separated)
# Example: http://localhost:8080,https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:8080

# Trust proxy (set to 1 if behind reverse proxy like nginx, Cloud Run, etc.)
TRUST_PROXY=1

# ==================== LOGGING CONFIGURATION ====================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable file logging (true/false)
LOG_TO_FILE=true

# Log directory (relative to backend folder)
LOG_DIR=./logs

# ==================== PYTHON & AUTODOCK VINA PATHS ====================

# Path to Python executable (conda environment)
PYTHON_PATH=/opt/conda/envs/vina/bin/python

# Path to AutoDock Vina executable
VINA_PATH=/opt/conda/envs/vina/bin/vina

# Path to prepare_receptor script (ADFRsuite)
PREPARE_RECEPTOR=/opt/conda/envs/vina/bin/prepare_receptor

# Path to prepare_ligand script (ADFRsuite)
PREPARE_LIGAND=/opt/conda/envs/vina/bin/prepare_ligand

# ==================== FILE STORAGE PATHS ====================

# Upload directory for temporary files
UPLOAD_PATH=/tmp/uploads

# Working directory for docking jobs
WORKDIR=/tmp/workdir

# ==================== RATE LIMITING ====================

# API rate limit (requests per window)
API_RATE_LIMIT=100

# API rate limit window (in minutes)
API_RATE_WINDOW=15

# Upload rate limit (requests per window)
UPLOAD_RATE_LIMIT=20

# Upload rate limit window (in minutes)
UPLOAD_RATE_WINDOW=60

# Download rate limit (requests per window)
DOWNLOAD_RATE_LIMIT=50

# Download rate limit window (in minutes)
DOWNLOAD_RATE_WINDOW=15

# ==================== FILE UPLOAD LIMITS ====================

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE=100

# Maximum number of files per upload
MAX_FILES_PER_UPLOAD=100

# ==================== PROCESS TIMEOUTS ====================

# Timeout for PDB download (in milliseconds)
PDB_DOWNLOAD_TIMEOUT=300000

# Timeout for ligand preparation (in milliseconds)
LIGAND_PREP_TIMEOUT=600000

# Timeout for docking process (in milliseconds)
DOCKING_TIMEOUT=7200000

# ==================== CLEANUP CONFIGURATION ====================

# Auto-cleanup interval for old progress data (in minutes)
PROGRESS_CLEANUP_INTERVAL=10

# Max age for progress data before cleanup (in minutes)
PROGRESS_MAX_AGE=30

# Auto-cleanup interval for old work directories (in hours)
WORKDIR_CLEANUP_INTERVAL=24

# Max age for work directories before cleanup (in hours)
WORKDIR_MAX_AGE=48

