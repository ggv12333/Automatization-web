# ============================================
# AutoDock Vina - Environment Configuration
# ============================================
# Copy this file to .env and update values as needed

# ===========================
# Server Configuration
# ===========================
PORT=8080
HOST=0.0.0.0
NODE_ENV=production

# ===========================
# Paths Configuration
# ===========================
# Directory for uploaded files
UPLOAD_PATH=/tmp/uploads

# Working directory for docking operations
WORKDIR=/tmp/workdir

# Path to Python executable (Conda environment)
PYTHON_PATH=/opt/conda/envs/vina/bin/python

# Path to AutoDock Vina executable
VINA_PATH=/opt/conda/envs/vina/bin/vina

# ===========================
# Security Configuration
# ===========================
# Comma-separated list of allowed origins for CORS
# Example: http://localhost:8080,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Rate limiting configuration (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload rate limiting
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
UPLOAD_RATE_LIMIT_MAX=20

# Docking rate limiting
DOCKING_RATE_LIMIT_WINDOW_MS=3600000
DOCKING_RATE_LIMIT_MAX=50

# ===========================
# Logging Configuration
# ===========================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable file logging (true/false)
LOG_TO_FILE=true

# Directory for log files
LOG_DIR=/app/logs

# ===========================
# Application Configuration
# ===========================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=104857600

# Maximum number of files per upload
MAX_FILES=100

# Session cleanup interval (in milliseconds)
SESSION_CLEANUP_INTERVAL=600000

# Session timeout (in milliseconds) - 2 hours
SESSION_TIMEOUT=7200000
